{{!< default}}
<section class="carousel-slick">
  <div class="carousel-slick-inner">
		{{#each data.room.sliderImages }}
    <div class="carousel-slick-item">
			<img src="{{cloudinaryUrl this}}" class="d-block w-100" alt="">
		</div>
		{{/each}}
  </div>
</section>
<section class="container">
  <h1 class="fancy fancy-light text-center"><span>{{data.room.title}}</span></h1>
  <div class="row">
    <div class="col-sm-6">
      {{{data.room.description.extended}}}
    </div>
    <div class="col-sm-6">
      <div class="well">
        {{{data.room.services}}}
        <a href="/booking" class="btn btn-success btn-large btn-lg btn-block">Забронировать</a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="page-header">
      <h2 class="text-center">Снято в {{data.room.title}}</h2>
    </div>
    <div class="col-sm-12">
      {{#each data.gallery}}
      <div class="col-sm-3">
        <div class="thumbnail">
          <img src="{{cloudinaryUrl previewImage}}" alt="{{alt}}" class="img-responsive">
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>