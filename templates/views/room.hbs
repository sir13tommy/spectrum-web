<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <article>
        <p>
          <a href="/rooms">Back to rooms</a>
        </p>
        <hr>
        <header>
          <h1>{{data.room.title}}</h1>
        </header>
        <div class="row">
          <div class="col-md-6 col-lg-6">
            {{#if data.room.iamge}}
              <img src="{{cloudinaryUrl data.room.iamge crop='fit'}}" class="img-responsive" alt="">
            {{/if}}
          </div>
          <div class="col-md-6 col-lg-6">
            <ul class="list-group">
              <li class="list-group-item"><strong>Prise: </strong>{{data.room.price}}</li>
              <li class="list-group-item"><strong>Qty: </strong>{{data.room.qty}}</li>
            </ul>
            <div class="well">
              {{{data.room.description}}}
            </div>
            <a href="/contact" class="btn btn-success btn-block">Ask About This Product</a>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>